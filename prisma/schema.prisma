generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL_EXTERNAL")
}

model Recipe {
  id          String       @id @default(uuid())
  name        String
  description String
  ingredients Ingredient[]
  steps       Step[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Ingredient {
  id       String  @id @default(uuid())
  name     String
  count    Int
  // todo: mb set g/mg/teaspoon/ml etc
  measure  String
  sequence Int    @default(0)
  Recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId String
}

model Step {
  id          String  @id @default(uuid())
  description String
  title       String?
  image       String?
  sequence    Int     @default(0)
  Recipe      Recipe  @relation(fields: [recipeId], references: [id])
  recipeId    String
}
